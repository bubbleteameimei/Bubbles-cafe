modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run replit:simple"
entrypoint = "package.json"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24.05"

[env]
PORT = "3002"
CLIENT_PORT = "5173"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = [ "typescript-language-server", "--stdio" ]

[deployment]
run = ["sh", "-c", "npm run build && npm run -w server start"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 3004
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[workflows]
runButton = "Start Web Feedback App"

[[workflows.workflow]]
name = "Start Web Feedback App"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npm run dev'"
waitForPort = 3002

[[workflows.workflow]]
name = "Build & Start App"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npm run build && npm start'"
waitForPort = 3002

[[workflows.workflow]]
name = "Initialize DB and Launch"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npx tsx scripts/init-db.ts && npm run dev'"
waitForPort = 3002

[agent]
integrations = ["firebase_barebones_javascript==1.0.0"]
