modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "bash -c 'npm install && npm run dev'"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && npm run build"]
run = ["sh", "-c", "npm start"]

[[ports]]
localPort = 3002
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Start Web Feedback App"

[[workflows.workflow]]
name = "Start Web Feedback App"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npm run dev'"
waitForPort = 3002

[[workflows.workflow]]
name = "Build & Start App"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npm run build && npm start'"
waitForPort = 3002

[[workflows.workflow]]
name = "Initialize DB and Launch"
author = 40492995
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm install && npx tsx scripts/init-db.ts && npm run dev'"
waitForPort = 3002

[[workflows.workflow]]
name = "Initialize DB and Launch with Sessions"
author = 46856769
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx scripts/ensure-session-table.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
